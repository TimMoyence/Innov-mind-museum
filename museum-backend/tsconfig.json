{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"],
      "@data/*": ["src/data/*"],
      "@IA/*": ["src/modules/IA/*"],
      "@src/*": ["src/*"]
    },
    "outDir": "./dist",
    "lib": ["ES2023"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/modules/IA/conversation/core/useCase/getConversationById.useCasets"
  ],
  "exclude": ["node_modules"]
}
